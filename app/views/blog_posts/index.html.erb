<h1>My blog</h1>

<% @blog_posts.each do |post| %>
  <div>
    <h2><%= link_to post.title, post %></h2>
    <% if post.draft? %>
      <div class="bg-gray-100 p-2 rounded text-gray-900">Draft</div>
    <% elsif post.scheduled? %>
      <div class="bg-blue-100 p-2 rounded text-gray-900">Scheduled</div>
    <% end %>
    <p><%= post.content %></p>
  </div>
<% end %>